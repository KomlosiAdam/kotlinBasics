<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculatorActivity"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/ic_dialog_dialer"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/NumberOne_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:hint="Első szám"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/NumberTwo_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:hint="Második szám"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/SUM_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Összeadás"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/Clear_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Törlés"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eredmény: "
            android:textSize="32sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/CalcResult_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="32sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>